@model IEnumerable<QLDA.Models.tbl_GhiChuDuAn>

@{ int i = 1;}
@foreach (var item in Model)
{
    <tr>
        <td>@i</td>
        <td class="">@item.ChiTiet</td>
        <td class="">@item.NgayGhiChu</td>
        @* <td>@Html.DisplayFor(modelItem => item.Ho) @Html.DisplayFor(modelItem => item.Ten, new { htmlAttributes = new { id = "idnv" } })</td>*@
        <td>
            <input type="button" class="btn btn-danger btn-sm" id="childButton"  value="Xóa ghi chú " data-maNv="@item.MaGhiChu" data-toggle="modal" data-target="#ghiChuModal" />
        </td>



    </tr>
    i++;
    

    <!-- Modal -->
    <div class="modal fade" id="ghiChuModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Có không giữ mất đừng tìm!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary"onclick="xoaGhiChu(@item.MaGhiChu)">Xóa thôi</button>
                </div>
            </div>
        </div>
    </div>

}


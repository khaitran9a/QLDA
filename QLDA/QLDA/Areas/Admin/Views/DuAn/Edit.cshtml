@model QLDA.Models.tbl_DuAn

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Chỉnh sửa dự án</h1>
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<section class="content">
    <div class="container-fluid card col-md-10 m-auto">
        <form action="" method="post" enctype="multipart/form-data">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal col-md-10 m-auto">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaDuAn)
                    <div class="form-group">
                        @Html.Label("TenDuAn", "Tên dự án", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenDuAn, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenDuAn, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("KinhPhi", "Kinh phí dự án", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.KinhPhi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KinhPhi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("ThoiGianDuKien", "Thời gian dự kiến", htmlAttributes: new { @class = "control -label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ThoiGianDuKien, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ThoiGianDuKien, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("NgayKhoiCong", "Ngày khởi công", htmlAttributes: new { @class = "control -label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgayKhoiCong, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.NgayKhoiCong, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Thumbnail", "Hình ảnh dự án", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="file" id="uploadhinh" name="uploadhinh" accept="image/*" class="" />
                            @* @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "", type = "file", id = "uploadhinh", name = "uploadhinh", accept = "image/*" } })*@
                            @Html.ValidationMessageFor(model => model.Thumbnail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group d-flex col-md-10">
                        <div class="col-md-11">
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary m-l" })
                        </div>
                        <div class="col-md-offset-2">
                            <input type="submit" value="Save" class="btn btn-info m-r" />
                        </div>
                    </div>
                </div>
            }
    </div>
</section>